// 32 bit NEC IR remote control
#define IR_ON 0xF7C03F
#define IR_OFF 0xF740BF
#define IR_RED 0xF720DF
#define IR_GREEN 0xF7A05F
#define IR_BLUE 0xF7609F
#define IR_WHITE 0xF7E01F
#define IR_FADE 0xF7C837
#define IR_SMOOTH 0xF7E817
#define IR_STROBE 0xF7D02F
#define IR_FLASH 0xF7D02F

void setup() {
  XSERIAL.begin(9600, SERIAL_8N1); // Open serial monitor at 9600 baud
  while (!XSERIAL) {
    ; // wait for serial port to connect. Needed for native USB port only
  }

#ifdef CVF_PRESENT
  if (tcs.begin()) {
    DEBUG_PRINTLN("#Found CVF sensor");
  } else {
    DEBUG_PRINTLN("#No TCS34725 found ... check your connections");
    while (1); // halt!
  }
  // use these three pins to drive an LED
  pinMode(cvf_ledpin, OUTPUT);
  digitalWrite(cvf_ledpin, HIGH);
#else
  DEBUG_PRINTLN("#Found simulated CVF sensor");
#endif

  // LED Config
  pinMode(LED1PIN1, OUTPUT);
  pinMode(LED1PIN2, OUTPUT);
  pinMode(LED2PIN, OUTPUT);

  // Motor Config
  pinMode(enablePin, OUTPUT);
  pinMode(in1Pin, OUTPUT);
  pinMode(in2Pin, OUTPUT);

  // Relay Config
  pinMode(RELAY1PIN, OUTPUT);
  pinMode(RELAY2PIN, OUTPUT);


  // ECHO PING Config in Constructor of SONAR
  // BT / Softserial Config in Constructor of SoftSerial

  establishContact();  // send a byte to establish contact until receiver responds

  DEBUG_PRINTLN("#Entered loop");
}

void loop() {
  int id, functionType, command;
  if (millis() >= readTimer) {
    readTimer += readSpeed;      // Set the next ping time.
    if (XSERIAL.available() > 0) {
      // Read in loop all data for one line
      id = XSERIAL.parseInt();
      functionType = XSERIAL.parseInt();
      command = XSERIAL.parseInt();

      switch (functionType) {
        case CV01:
        //  ColorViewFunction(id, command);
          break;
        case PE01:
         // PingEchoFunction(id, command);
          break;
        case LED01:
         // LEDFunction(id, command);
          break;
        case REL01:
         // RelayFunction(id, command);
          break;
        case MM01:
         // MotorFunction(id, command);
          break;
        case LS01:
          LightSensorFunction(id, command);
          break;
      }
      processCleanUp();
    }
  }
}
 

// -------- LightSensor ------------
void LightSensorFunction( int id, int command){
  //TODO Debug output
  DEBUG_PRINT("\n#In the LightSensorFunction with function : '");
  DEBUG_PRINTLN(command);
  
  DEBUG_PRINT("' and with ID: ");
  DEBUG_PRINTLN(id);
  int variable = XSERIAL.parseInt();
  
  switch(command){
    case READ:{
      if(variable == 0){
        LightFunctionPrint(id,analogRead(LS1PIN),millis());
      }
      else if(variable == 1){
        LightFunctionPrint2(id,0.0,millis());
      }
      break;
    }
    case START:{
      int valueNow = analogRead(LS1PIN);
      LightFunctionStart(id,variable,valueNow);
      break;
    }
    case STOP:{
      LightFunctionStop(id,0.0);
      break;
    }
    default:
      break;
  }
  // ID, LS01, R1, <brightness:int>, <timestamp:long>
}
void LightFunctionPrint(int id,int value,unsigned long time){
    DEBUG_PRINTLN("# In the sub-function LightFunctionPrint of LightSensorFunction");
    DEBUG_PRINT("# with id");
    DEBUG_PRINTLN(id);
    
    XSERIAL.print(id); XSERIAL.print(", ");
    XSERIAL.print(LS01);  XSERIAL.print(", ");
    XSERIAL.print(R1);  XSERIAL.print(", ");
    XSERIAL.print(value);  XSERIAL.print(", ");
    XSERIAL.println(time);
    XSERIAL.flush();
  }
  //print funktion fÃ¼r die Frequenz
  void LightFunctionPrint2(int id,float value,unsigned long time){
    DEBUG_PRINTLN("# In the sub-function LightFunctionPrint of LightSensorFunction");
    DEBUG_PRINT("# with id");
    DEBUG_PRINTLN(id);
    
    XSERIAL.print(id); XSERIAL.print(", ");
    XSERIAL.print(LS01);  XSERIAL.print(", ");
    XSERIAL.print(R1);  XSERIAL.print(", ");
    XSERIAL.print(value);  XSERIAL.print(", ");
    XSERIAL.println(time);
    XSERIAL.flush();
  }
  void LightFunctionStart(int id,int valueDiff,int valueDown){
    //gibt sobald sich die Helligkeit um valueMax geÃ¤ndert hat die Helligkeit und Zeit
    //zurÃ¼ck
    DEBUG_PRINTLN("# In the sub-function LightFunctionStart of LightSensorFunction");
    DEBUG_PRINT("# with id");
    DEBUG_PRINTLN(id);
    int counter = 0;
    unsigned long startTime;
    boolean AnAus;
    int valueNow;
    while(Serial.available()<=0){  
      
      //auf wechsel warten, je nach dem ob wir bei hell oder dunkel angefangen haben
      valueNow = analogRead(LS1PIN); 
      if(valueNow>=valueDown+valueDiff){
        startTime = millis();
        counter++;
        AnAus = true;
        LightFunctionFrequenz(id,valueDown,valueDiff,AnAus,startTime,counter,millis(),0,false,0);
        return;
      }
      //falls auf die wartende helligkeit ins negative gehen wÃ¼rde setze sie auf 0
      int valueX = valueDown-valueDiff;
      if(valueX < 0){
        valueX = 0;
      }
      if(valueNow <= valueX){
        startTime = millis();
        counter++;
        AnAus = false; 
        LightFunctionFrequenz(id,valueNow,valueDiff,AnAus,startTime,counter,millis(),0,false,0);
        return;
      }
    }
    ////////wenn hier abfrage kommt ist die frequenz 0.0 da es noch keinen wechsel gab
    int functionType, command,variable;
    if (millis() >= readTimer) {
      readTimer += readSpeed;      // Set the next ping time.
    if (XSERIAL.available() > 0) {
      // Read in loop all data for one line
      id = XSERIAL.parseInt();
      functionType = XSERIAL.parseInt();
      command = XSERIAL.parseInt();
      variable = XSERIAL.parseInt();
      
      switch (functionType) {
        case CV01:
        //  ColorViewFunction(id, command);
          break;
        case PE01:
         // PingEchoFunction(id, command);
          break;
        case LED01:
         // LEDFunction(id, command);
          break;
        case REL01:
         // RelayFunction(id, command);
          break;
        case MM01:
         // MotorFunction(id, command);
          break;
        case LS01:
          switch(command){
            case READ:{       
              if(variable==1){
                //gib die aktuelle frequenz zurÃ¼ck und mache weiter
                LightFunctionPrint2(id,0.0,millis());
                LightFunctionStart(id,valueDiff,valueDown);
              }
              else if(variable == 0){
                 LightFunctionPrint(id,analogRead(LS1PIN),millis());
                 LightFunctionStart(id,valueDiff,valueDown);            
              }  
               break;}
            case START:{
               // starte neu 
                int valueMax = XSERIAL.parseInt();
                int value = analogRead(LS1PIN);
                LightFunctionStart(id,valueMax,value);  
                break;}
            case STOP:{
                LightFunctionStop(id,0.0);
               break;}
          }
          break;
      }
      processCleanUp();
    } 
  }
  }
 void LightFunctionFrequenz(int id,int valueDown,int valueDiff,boolean highDown,unsigned long startZeit,int counter,unsigned long endZeit,int timeIntervall,boolean error,int spielraum){
    float frequenz;
    int valueNow;
  while(Serial.available()<=0){
    valueNow = analogRead(LS1PIN);
   
    if(valueNow>=valueDown+valueDiff && highDown == false){
      highDown = true;
         if(timeIntervall == 0){
            timeIntervall = millis() - startZeit;
            spielraum = timeIntervall * 0.1;
             Serial.println(spielraum);
          }
         else if((int)(millis()-endZeit) < timeIntervall-spielraum || (int)(millis()-endZeit) > timeIntervall+spielraum ){
            Serial.print("error");
            error = true;
          
          }
      endZeit = millis();
      counter++;
    }
    
    Serial.println(valueDown);
    Serial.println(valueDiff);
    
    int valueX = valueDown-valueDiff;
    if(valueX < 0){
        valueX = 0;
    }
    if(valueNow <=valueX && highDown == true){
      highDown = false;
      counter++; 
          if(timeIntervall == 0.0){
            timeIntervall = millis() - startZeit;
            spielraum = timeIntervall * 0.1;
            Serial.println("spielraum2"+spielraum);
          }
         else if((int)(millis()-endZeit) < timeIntervall-spielraum || (int)(millis()-endZeit) > timeIntervall+spielraum ){
            error = true;     
            Serial.println("error");
          }
          endZeit = millis();
    }

    
  }

  //////////Berechne Frequenz//////////////////
  frequenz = (float)(counter*1000)/(float)(endZeit-startZeit);


  
  ///////////ReadInput//////////////////
  int functionType,command,variable;
     if (millis() >= readTimer) {
    readTimer += readSpeed;      // Set the next ping time.
    if (XSERIAL.available() > 0) {
      // Read in loop all data for one line
      id = XSERIAL.parseInt();
      functionType = XSERIAL.parseInt();
      command = XSERIAL.parseInt();
      variable = XSERIAL.parseInt();
      
      switch (functionType) {
        case CV01:
        //  ColorViewFunction(id, command);
          break;
        case PE01:
         // PingEchoFunction(id, command);
          break;
        case LED01:
         // LEDFunction(id, command);
          break;
        case REL01:
         // RelayFunction(id, command);
          break;
        case MM01:
         // MotorFunction(id, command);
          break;
        case LS01:
          switch(command){
            case READ:{
              if(error == true){
                Serial.print("Error");
                LightFunctionPrint2(id,0.0,millis());
                LightFunctionFrequenz(id,valueDown,valueDiff,highDown,startZeit,counter,endZeit,timeIntervall,error,spielraum);
              }
              else if(variable==1){
                //gib die aktuelle frequenz zurÃ¼ck und mache weiter
                LightFunctionPrint2(id,frequenz,millis());
                LightFunctionFrequenz(id,valueDown,valueDiff,highDown,startZeit,counter,endZeit,timeIntervall,error,spielraum);
              }
              if(variable == 0){    
                 LightFunctionPrint(id,analogRead(LS1PIN),millis());
                 LightFunctionFrequenz(id,valueDown,valueDiff,highDown,startZeit,counter,endZeit,timeIntervall,error,spielraum);
              }  
               break;}
            case START:{
               // starte neu 
                int value = analogRead(LS1PIN);
                LightFunctionStart(id,variable,value);  
                break;}
            case STOP:{
                if(error == true){
                  LightFunctionStop(id,0.0);
                }
                else{
                  LightFunctionStop(id,frequenz);
                }
               break;}
          }
          break;
      }
      processCleanUp();
    } 
  }
  
 }
 void LightFunctionStop(int id,float frequenz){
    //gibt die Helligkeit und Zeit zurÃ¼ck
    DEBUG_PRINTLN("# In the sub-function LightFunctionRead of LightSensorFunction");
    DEBUG_PRINT("# with id");
    DEBUG_PRINTLN(id);
    LightFunctionPrint2(id,frequenz,millis());
  }

  
// ----------------- GENERAL CONFIG ------------
void establishContact() {
  while (XSERIAL.available() <= 0) {
    XSERIAL.print("0,0,0,");   // send an initial string
    XSERIAL.println(millis());
    delay(1000);
  }
}

void processCleanUp () {
  // If we are here rest ist rubbish
  int i;
  DEBUG_PRINTLN("#CleanUp");
  while (XSERIAL.available() > 0) {
    i = XSERIAL.read();
  }
}

