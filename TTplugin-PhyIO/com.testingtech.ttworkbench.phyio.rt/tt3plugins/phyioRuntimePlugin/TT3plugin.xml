<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE plugin PUBLIC "-//TESTING TECH//DTD TT3plugin//2.0" "TT3plugin.dtd"> 
<plugin id="com.testingtech.tt3rt.phyio.PhyIORuntimePlugin" name="PhyIO codec and port plugin" provider-name="Testing Technologies IST GmbH" version="1.0.0">
  <runtime>
    <library name="../../build/phyioRuntimePlugin"/>
    <library name="phyioRuntimePlugin.jar"/>
  </runtime>
  <dependency>
    <reference id="com.testingtech.tt3rt.rs232.rs232RuntimePlugin"/>
  </dependency>
  <extension point="com.testingtech.ttcn.extension.CodecProvider">
    <parameter id="name" value="PhyIO Codec"/>
    <parameter id="description" value="Decode PhyIO events from sensors and sent data to actuators"/>
    <parameter id="class" value="com.testingtech.tt3rt.phyio.phyioRuntimePlugin.PhyIOCodec"/>
    <parameter id="encoding" value="PhyIO"/>
  </extension>
  <extension point="com.testingtech.ttcn.tri.extension.PortPluginProvider">
    <parameter id="class" value="com.testingtech.tt3rt.phyio.phyioRuntimePlugin.PhyIOPort"/>
    <parameter id="description" value="Receive PhyIO events from sensors and send data to actuators"/>
    <parameter id="name" value="PhyIO Port Filter"/>
    <parameter id="taParams">
      <parameter id="taParamDeclaration">
        <parameter id="name" value="SerialPortName"/>
        <parameter id="type" value="charstring"/>
        <parameter id="default">
          <value>
            <Values:charstring xmlns:Values="Values.xsd" type="charstring">
              <Values:value>COM6</Values:value>
            </Values:charstring>
          </value>
        </parameter>
        <parameter id="description"/>
      </parameter>
      <parameter id="taParamDeclaration">
        <parameter id="name" value="BaudRate"/>
        <parameter id="type" value="integer"/>
        <parameter id="default" value="9600"/>
        <parameter id="description"/>
      </parameter>
      <parameter id="taParamDeclaration">
        <parameter id="name" value="DataBits"/>
        <parameter id="type" value="integer"/>
        <parameter id="default" value="8"/>
        <parameter id="description" value="can take only the values: {5,6,7,8}"/>
      </parameter>
      <parameter id="taParamDeclaration">
        <parameter id="name" value="StopBits"/>
        <parameter id="type" value="integer"/>
        <parameter id="default" value="1"/>
        <parameter id="description" value="can take only the  values: {1, 2,3}"/>
      </parameter>
      <parameter id="taParamDeclaration">
        <parameter id="name" value="Parity"/>
        <parameter id="type" value="integer"/>
        <parameter id="default" value="0"/>
        <parameter id="description" value="can take the values: PARITY_NONE = 0, PARITY_ODD = 1, PARITY_EVEN = 2, PARITY_MARK = 3, PARITY_SPACE = 4"/>
      </parameter>
      <parameter id="taParamDeclaration">
        <parameter id="name" value="FlowControl"/>
        <parameter id="type" value="charstring"/>
        <parameter id="default">
          <value>
            <Values:charstring xmlns:Values="Values.xsd" type="charstring">
              <Values:value>0</Values:value>
            </Values:charstring>
          </value>
        </parameter>
        <parameter id="description" value="can take the values: FLOWCONTROL_NONE = 0, FLOWCONTROL_RTSCTS_IN = 1, FLOWCONTROL_RTSCTS_OUT = 2, FLOWCONTROL_XONXOFF_IN = 4, FLOWCONTROL_XONXOFF_OUT = 8 . For using several flow control parameters separate the values with a coma."/>
      </parameter>
      <parameter id="taParamDeclaration">
        <parameter id="name" value="CheckDSR"/>
        <parameter id="type" value="boolean"/>
        <parameter id="default">
          <value>
            <Values:boolean xmlns:Values="Values.xsd" type="boolean">
              <Values:value>false</Values:value>
            </Values:boolean>
          </value>
        </parameter>
        <parameter id="description" value="True if DSR check should be activated."/>
      </parameter>
    </parameter>
  </extension>
</plugin>
