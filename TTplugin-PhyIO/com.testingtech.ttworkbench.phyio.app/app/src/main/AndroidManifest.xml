<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.testingtech.car2x.hmi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestSelectorActivity"
            android:label="@string/title_activity_test_selector"
            android:parentActivityName=".ProjectSelectorActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.testingtech.car2x.hmi.ProjectSelectorActivity" />
        </activity>
        <activity
            android:name=".TestRunnerActivity"
            android:label="@string/title_activity_test_runner"
            android:parentActivityName=".TestSelectorActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.testingtech.car2x.hmi.TestSelectorActivity" />
        </activity>
        <activity
            android:name=".ProjectSelectorActivity"
            android:label="@string/title_activity_project_selector"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.testingtech.car2x.hmi.MainActivity" />

        </activity>
    </application>

</manifest>
