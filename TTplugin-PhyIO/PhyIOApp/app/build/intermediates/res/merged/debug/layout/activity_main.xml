<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".UserInterface.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/content_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/textlogo"
        android:layout_gravity="top"
        android:layout_weight="1" />

    <com.testingtech.car2x.hmi.UserInterface.IpAddressTextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/ip"
        android:hint="@string/text_hint_server_ip"
        android:layout_gravity="center_horizontal"
        android:completionThreshold="1"
        android:singleLine="true"
        android:inputType="number|numberDecimal"
        android:digits="0123456789."
        android:imeOptions="actionDone"
        android:editable="true"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="15dp">
        <requestFocus/>
    </com.testingtech.car2x.hmi.UserInterface.IpAddressTextView>

    <Button
        android:id="@+id/test"
        android:text="@string/button_test_activity"
        android:textSize="24sp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:onClick="startActivityTest"
        android:gravity="center"
        android:enabled="true"
        android:layout_gravity="center_horizontal"
        style="@style/MyButtonStyle"
        android:layout_marginBottom="50dp" />

</LinearLayout>
